{
  "name": "Reelcipe Development",
  "dockerComposeFile": [
    "../compose/compose.yml",
    "../compose/compose.dev.yml"
  ],
  "service": "frontend",
  "workspaceFolder": "/app",
  "forwardPorts": [
    3500,
    3569,
    7823,
    9229,
    9230,
    9231
  ],
  "portsAttributes": {
    "3500": {
      "label": "Frontend",
      "onAutoForward": "notify"
    },
    "3569": {
      "label": "Auth Service",
      "onAutoForward": "silent"
    },
    "7823": {
      "label": "Recipe Generator",
      "onAutoForward": "silent"
    },
    "9229": {
      "label": "Frontend Debug",
      "onAutoForward": "silent"
    },
    "9230": {
      "label": "Auth Service Debug",
      "onAutoForward": "silent"
    },
    "9231": {
      "label": "Telegram Bot Debug",
      "onAutoForward": "silent"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "denoland.vscode-deno",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "deno.enable": true,
        "deno.lint": true,
        "deno.unstable": true
      }
    }
  },
  "postCreateCommand": "echo 'Development environment ready!'",
  "remoteUser": "root"
}
